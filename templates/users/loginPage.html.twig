{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Connexion{% endblock %}

{% block body %}
    <div class="registerPage">
        <img src="{{ asset('images/illustration/tree.webp') }}" alt="Photo de feuilles très très vertes"/>
        
        <div id="formRegister">
            <h2>Connexion<h2>

            {#% if error %}
                <div class="errorLogin">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %#}

            <form action="{{ path('app_login') }}" method="post" class="formLogin">
                <label for="email">Email :</label>
                <input type="email" id="email" name="_username" required="true">

                <label for="password">Mot de passe :</label>
                <input type="password" id="password" name="_password" required="true">

                <button class="button button-submit">Se connecter</button>
                
                <a href="{{ path('app_register') }}" class="redirectLoginRegister">Pas encore de compte ? S'inscrire</a>
            </form>
        </div>
    </div>
{% endblock %}